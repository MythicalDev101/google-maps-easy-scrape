{
    "manifest_version": 3,
    "name": "Google Maps Easy Scrape",
    "version": "1.0",
    "description": "Google Maps Easy Scrape by Mike Powers - Improved by Hashaam101",
    "permissions": ["activeTab", "scripting", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y"
        },
        "description": "Open extension popup"
      },
      "scrape": {
        "suggested_key": {
          "default": "Ctrl+Shift+S"
        },
        "description": "Scrape Google Maps from active tab"
      }
    },
    "icons": {
      "16": "map.png",
      "48": "map.png",
      "128": "map.png"
    }
  }
  